<script type="text/javascript">
    google.load("visualization", "1", { packages: ["orgchart"] });
    google.setOnLoadCallback(drawChart);
    function drawChart() {
        var data = new google.visualization.DataTable();
        data.addColumn('string', 'Name');
        data.addColumn('string', 'Manager');

        data.addRows([
            ['Total Spend', ''],
            ['Legal', 'Total Spend'],
            ['IT', 'Total Spend'],
            ['Utilities', 'Total Spend'],
            ['Food and Drink', 'Total Spend'],
            ['Corporate Services', 'Total Spend'],
            ['Indirect Expenditure', 'Utilities'],
            ['Travel and Subsistence', 'Corporate Services'],
            ['Office Services', 'Indirect Expenditure'],
            ['Facilities Mgt', 'Indirect Expenditure'],
            [{
                v: '<strong><a href="/survey">Stationery</a></strong>',
                f: '<a href="/survey">Stationery</a><div style="color:red; font-style:italic">Demo</div>'
            }, 'Office Services'],
            ['Comsumables', 'Office Services']
        ]);

        var chart = new google.visualization.OrgChart(document.getElementById('chart_div'));
        chart.draw(data, { allowHtml: true });
    }
</script>


